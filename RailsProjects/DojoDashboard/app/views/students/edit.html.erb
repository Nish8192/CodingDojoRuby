<h1>Edit <%=@student.first_name%>'s Profile</h1>

<form action="/dojos/<%=@student.dojo.id%>/students/<%=@student.id%>" method = "post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="hidden" name="_method" value="put">
    First Name: <input type="text" name="first_name" value="<%=@student.first_name%>">
    First Name: <input type="text" name="last_name" value="<%=@student.last_name%>">
    Email: First Name: <input type="text" name="email" value="<%=@student.email%>">
    Dojo: <select name="dojo">
        <% @dojos.each do |dojo| %>
        <option value="<%=dojo.id%>"><%=dojo.branch%></option>
        <% end %>
    </select>
    <input type="submit" value="Save Changes to Student">
</form>
